            pd_id: "<%=cart[i].cart_id%>",
            pd_name: "<%=cart[i].cart_name%>",
            pd_num: parseInt("<%=cart[i].cart_num%>"),
            pd_price: parseFloat("<%=cart[i].cart_price%>"),
            pd_weight: parseFloat("<%=cart[i].cart_weight%>"),
