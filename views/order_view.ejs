		for(var i=0;i<user.cart.length;i++){%>
        $.post("/addorder", {
            pd_id: "<%=user.cart[i].cart_id%>",
            pd_name: "<%=user.cart[i].cart_name%>",
            pd_num: parseInt("<%=user.cart[i].cart_num%>"),
            pd_price: parseFloat("<%=user.cart[i].cart_price%>"),
            pd_weight: parseFloat("<%=user.cart[i].cart_weight%>"),
            isfirst: parseInt("<%=i==0?1:0%>")
        }, function(data, status){});
        sleep(500);
		<%}
		}%>
        window.location='/order'
    });
    $('.header-cart-item-img').each(function(){
        var idCart = $(this).parent().find('.header-cart-item-id').html();
